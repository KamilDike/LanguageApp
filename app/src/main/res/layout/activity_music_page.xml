<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    tools:context=".MusicPage">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <RelativeLayout
        android:id="@+id/connected"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/design_default_color_background"
        >

        <!-- Rectangle 1 -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_rectangle_1"
            android:translationZ="20dp"
            />

        <!-- Vector 4 -->
        <View
            android:id="@+id/vector_4"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/ic_vector_4"
            android:elevation="4dp" />

        <!-- ContrÃ´leur -->
        <TextView
            android:id="@+id/contr_leur"
            android:layout_width="236dp"
            android:layout_height="56dp"
            android:translationZ="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="24dp"
            android:gravity="top"
            android:text="@string/contr_leur"
            android:textColor="@color/onPrimary"
            android:textSize="48sp" />

        <!-- Vector 1 -->
        <View
            android:id="@+id/vector_1"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="467dp"
            android:background="@drawable/ic_vector_1"
            android:elevation="0dp" />

        <!-- Ellipse 7 -->
        <View
            android:id="@+id/ellipse_7"
            android:layout_width="411dp"
            android:layout_height="411dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="171dp"
            android:layout_marginBottom="149dp"
            android:background="@drawable/ic_ellipse_7" />

        <!-- Ellipse 5 -->
        <View
            android:id="@+id/ellipse_5"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="203dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="178dp"
            android:background="@drawable/ic_ellipse_5" />

        <!-- Ellipse 6 -->
        <View
            android:id="@+id/ellipse_6"
            android:layout_width="306dp"
            android:layout_height="306dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="199dp"
            android:background="@drawable/ic_ellipse_6" />

        <!-- Ellipse 1 -->
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ic_frame_2"
            android:onClick="resetMousePointer"
            />
        <!-- la Musique -->
        <TextView
            android:id="@+id/la_musique"
            android:layout_width="245dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="346dp"
            android:layout_marginEnd="88dp"
            android:gravity="center_horizontal|top"
            android:text="@string/la_musique"
            android:textAppearance="@style/la_musique"
            android:textColor="@color/onPrimary" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="334dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="334dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="309dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

    </RelativeLayout>



</FrameLayout>